# directory declaration
LIB_CCONTROL_DIR = $(LIBRARIES_ROOT)/ccontrol

LIB_CCONTROL_ASMSRCDIR	= $(LIB_CCONTROL_DIR) $(LIB_CCONTROL_ASMSRC_SUBDIR)

LIB_CCONTROL_CSRCDIR	= $(LIB_CCONTROL_DIR) $(LIB_CCONTROL_CSRC_SUBDIR)

LIB_CCONTROL_CXXSRCSDIR    = $(LIB_CCONTROL_DIR) $(LIB_CCONTROL_CXXSRCS_SUBDIR)

LIB_CCONTROL_INCDIR	= $(LIB_CCONTROL_DIR) $(LIB_CCONTROL_INC_SUBDIR)


LIB_CCONTROL_CSRC_SUBDIR += $(LIB_CCONTROL_DIR)/Sources/LinearAlgebra \
							 $(LIB_CCONTROL_DIR)/Sources/Miscellaneous \
							 $(LIB_CCONTROL_DIR)/Sources/Statistics
							


LIB_CCONTROL_ASMSRC_SUBDIR += 
LIB_CCONTROL_CXXSRCS_SUBDIR +=

LIB_CCONTROL_INC_SUBDIR += $(LIB_CCONTROL_DIR)/Headers

# find all the source files in the target directories
LIB_CCONTROL_CSRCS = $(call get_csrcs, $(LIB_CCONTROL_CSRCDIR))
LIB_CCONTROL_CXXSRCS = $(call get_cxxsrcs, $(LIB_CCONTROL_CXXSRCSDIR))
LIB_CCONTROL_ASMSRCS = $(call get_asmsrcs, $(LIB_CCONTROL_ASMSRCDIR))

# get object files
LIB_CCONTROL_COBJS = $(call get_relobjs, $(LIB_CCONTROL_CSRCS))
LIB_CCONTROL_CXXOBJS = $(call get_relobjs, $(LIB_CCONTROL_CXXSRCS))
LIB_CCONTROL_ASMOBJS = $(call get_relobjs, $(LIB_CCONTROL_ASMSRCS))
LIB_CCONTROL_OBJS = $(LIB_CCONTROL_COBJS) $(LIB_CCONTROL_ASMOBJS) $(LIB_CCONTROL_CXXOBJS)

# get dependency files
LIB_CCONTROL_DEPS = $(call get_deps, $(LIB_CCONTROL_OBJS))

# extra macros to be defined
LIB_CCONTROL_DEFINES = 

# genearte library
ifeq ($(CCONTROL_FORCE_PREBUILT), y)
override LIB_CCONTROL_OBJS:=
endif
LIB_LIB_CCONTROL_NAME = liblibccontrol.a
LIB_LIB_CCONTROL := $(subst /,$(PS), $(strip $(OUT_DIR)/$(LIB_LIB_CCONTROL_NAME)))

# library generation rule
$(LIB_LIB_CCONTROL): $(LIB_CCONTROL_OBJS)
	$(TRACE_ARCHIVE)
ifeq "$(strip $(LIB_CCONTROL_OBJS))" ""
	$(CP) $(PREBUILT_LIB)$(LIB_LIB_CCONTROL_NAME) $(LIB_LIB_CCONTROL)
else
	$(Q)$(AR) $(AR_OPT) $@ $(LIB_CCONTROL_OBJS)
	$(CP) $(LIB_LIB_CCONTROL) $(PREBUILT_LIB)$(LIB_LIB_CCONTROL_NAME)
endif

# specific compile rules
# user can add rules to compile this middleware
# if not rules specified to this middleware, it will use default compiling rules

# Middleware Definitions
LIB_INCDIR += $(LIB_CCONTROL_INCDIR)
LIB_CSRCDIR += $(LIB_CCONTROL_CSRCDIR)
LIB_CXXSRCDIR += $(LIB_CCONTROL_CXXSRCDIR)
LIB_ASMSRCDIR += $(LIB_CCONTROL_ASMSRCDIR)

LIB_CSRCS += $(LIB_CCONTROL_CSRCS)
LIB_CXXSRCS += $(LIB_CCONTROL_CXXSRCS)
LIB_ASMSRCS += $(LIB_CCONTROL_ASMSRCS)
LIB_ALLSRCS += $(LIB_CCONTROL_CSRCS) $(LIB_CCONTROL_ASMSRCS)

LIB_COBJS += $(LIB_CCONTROL_COBJS)
LIB_CXXOBJS += $(LIB_CCONTROL_CXXOBJS)
LIB_ASMOBJS += $(LIB_CCONTROL_ASMOBJS)
LIB_ALLOBJS += $(LIB_CCONTROL_OBJS)

LIB_DEFINES += $(LIB_CCONTROL_DEFINES)
LIB_DEPS += $(LIB_CCONTROL_DEPS)
LIB_LIBS += $(LIB_LIB_CCONTROL)