	SCENARIO_APP_CSRCDIR += $(foreach SCENARIO_APP_CLI, $(SCENARIO_APP_SUPPORT_SORTED), $(addprefix $(SCENARIO_APP_ROOT)/, $(SCENARIO_APP_CLI)))
