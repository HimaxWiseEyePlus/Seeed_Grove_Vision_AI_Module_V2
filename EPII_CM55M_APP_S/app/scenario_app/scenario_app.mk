	SCENARIO_APP_CCSRCS = $(call get_ccsrcs, $(SCENARIO_APP_CCSRCDIR))
	SCENARIO_APP_ASMSRCS = $(call get_asmsrcs, $(SCENARIO_APP_ASMSRCDIR))
