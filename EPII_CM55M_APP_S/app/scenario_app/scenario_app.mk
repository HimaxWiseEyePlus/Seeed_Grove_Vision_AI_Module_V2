ifdef SCENARIO_APP_SUPPORT_LIST
	override SCENARIO_APP_SUPPORT_LIST  := $(sort $(strip $(SCENARIO_APP_REQUIRED) $(SCENARIO_APP_SUPPORT_LIST)))
